<h1>Nouvelle tache</h1>

<%= form_with model: @task, local: true, method: :post do |f| %>
  <div>
    <%= f.label :title, "Titre" %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :details %><br>
    <%= f.text_area :details %>
  </div>
  <div>
    <%= f.label :completed, "Complété" %>
    <%= f.check_box :completed %>
  </div>
  <%= f.submit "Créer une tache" %>
<% end %>

<%= link_to "Back to list", tasks_path %>
