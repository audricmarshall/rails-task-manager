<div class="container my-5">
  <h1 class="mb-4">My tasks</h1>

  <ul class="list-group mb-4">
    <% @tasks.each do |task| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
        <%# coché si complété, case vide sinon %>
          <% if task.completed %>
            <i class="fa-solid fa-square-check text-success"></i>
          <% else %>
            <i class="fa-regular fa-square"></i>
          <% end %>
          <%= link_to task.title, task_path(task), class: "ms-2 fw-bold" %>
        </div>
        <div>
          <%= button_to task_path(task), method: :delete,
          data: { controller: "confirm", action: "click->confirm#confirm", confirm_message_value: "🗑️ Are you sure you want to delete this task?", turbo: false}, class: "btn btn-outline-danger btn-sm" do %>
          <i class="fa-solid fa-trash me-1"></i>
          <% end %>
        </div>
      </li>

    <% end %>
  </ul>

  <%= link_to "Add a task", new_task_path, class: "btn btn-primary" %>
</div>
