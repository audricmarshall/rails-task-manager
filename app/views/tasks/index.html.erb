<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
      <%= button_to 'Delete', task_path(task), method: :delete,
      data: { controller: "confirm", action: "click->confirm#confirm", confirm_message_value: "Are you sure you want to delete this task?", turbo: false} %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a task", new_task_path %>
