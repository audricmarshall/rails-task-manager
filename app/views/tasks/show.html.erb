<h1>Task details</h1>

<div>
  <strong>Title:</strong>
  <div><%= @task.title %></div>
</div>

<div>
  <strong>Details:</strong>
  <div><%= @task.details %></div>
</div>

<div>
  <strong>Completed:</strong>
  <div><%= @task.completed ? 'Yes' : 'No' %></div>
</div>

<div>
  <%= link_to "Edit this task", edit_task_path(@task) %>
</div>

<div>
  <%= link_to "Back to list", tasks_path %>
</div>
